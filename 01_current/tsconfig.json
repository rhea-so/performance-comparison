{
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"],
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "./dist",
    "paths": { "@src/*": ["src/*"] },
    "target": "es2021",
    "module": "commonjs",
    "noLib": false,
    "allowJs": false,
    "sourceMap": true,
    "declaration": false,
    "skipLibCheck": true,
    "removeComments": true,
    "noImplicitAny": false,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true
  }
}
